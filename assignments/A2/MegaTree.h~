class MegaTree
{
	private:
		MegaNode *node;
	public:
		// sets the dimension
		MegaTree(); 
		// takes a name and vector of k values and adds a suitable node to the tree
		void insert( string name, double vals[] );
		// utilizes a recursive procedure to print the structure of the tree up to 	
		// and including depth 3
		void preorder();

};

